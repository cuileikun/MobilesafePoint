<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp"
    >
    <ImageView 
        android:id="@+id/iv_processmanageritem_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_launcher"
        android:layout_centerVertical="true"
        />
	<LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_toRightOf="@+id/iv_processmanageritem_icon"
	    android:orientation="vertical"
	    android:layout_centerVertical="true"
	    android:layout_marginLeft="5dp"
	    >
	    <TextView 
	        android:id="@+id/tv_processmanageritem_name"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="手机卫士"
	        android:textSize="15sp"
	        android:textColor="#000000"
	        />
	    <RelativeLayout 
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        >
	         <TextView 
	        android:id="@+id/tv_processmanageritem_memory"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="占用内存:xxxMB"
	        android:textSize="15sp"
	        android:textColor="#000000"
	        />
	    </RelativeLayout>
	</LinearLayout>
	<!-- checkbox天生是有点击事件和焦点的,所以会造成listview条目无法点击 
		  clickable	: 是否可以点击   true:可以 false:不可以
		  focusable : 是否可以获取焦点 true:可以  false:不可以
		  -->
	<CheckBox 
	    android:id="@+id/cb_processmanageritem_isselect"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignParentRight="true"
	    android:layout_centerVertical="true"
	    android:clickable="false"
	    android:focusable="false"
	    />
	
	
	
	
	
	
	
	
</RelativeLayout>